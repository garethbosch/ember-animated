<svg name="chart" width="900" height="510" 
    version="1.1" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="100%" stroke="black" stroke-width="3" fill="transparent" />

  <svg name="chart_field" width="92%" height="86%" x="7%" y="2%" 
      version="1.1" xmlns="http://www.w3.org/2000/svg">  
    {{#animated-each points key="country" watch="gdp,life,population" use=moveThem duration=1000 as |point|}}
      <circle
        cx={{scale point.gdp minValue=142 maxValue=182668 scale="log" }}
        cy={{scale point.life minValue=10 maxValue=90 invert=true}}
        r={{scale point.population minValue=2000 maxValue="1380000000" scaleCircleArea=80 minCircleArea=6}}
        fill="lightgreen"
        stroke="black" stroke-width="0.5">
        <title>
          {{point.country}}<br>{{point.population}} people<br>${{point.gdp}} income/capita<br>{{point.life}} years expected
        </title>
      </circle>
    {{/animated-each}}
  </svg>

  {{chart-axis model=model axis='x' tickCount=10 key='gdp' scale='log' label='Income (USD)'}}
  {{chart-axis model=model axis='y' tickCount=10 key='life' label='Life Expectancy'}}

</svg>

<br>
<table class='chart-controls-table'><tbody>
  <tr><td width='16.67%'></td><td width='16.67%'></td>
    <td width='33.34%'>
      <button onclick={{perform play}}>
        Play
      </button>
      <button onclick={{action 'pause'}}>
        Pause
      </button></td><td width='16.67%'></td><td width='16.67%'></td></tr>
  <tr><td colspan='6'>
    <b>{{currentYear}}</b></td></tr>
  <tr><td colspan='6'>
    {{input type='range' class='year-slider' min='1950' max='2015' value=fastCurrentYear}} </td>
  </tr>
  <tr><td colspan='6'>
      <button onclick={{perform playLoop}}>
        Loop
      </button>&nbsp;&nbsp;&nbsp;
      start {{input type='number' min='1950' max='2015' value=startingYear}}&nbsp;
      end {{input type='number' min='1950' max='2015' value=endingYear}}</td>
  </tr>
</tbody></table>
